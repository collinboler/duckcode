{
  "icons": {
    "16": "~src/assets/duck_128.png",
    "48": "~src/assets/duck_128.png",
    "64": "~src/assets/duck_128.png",
    "128": "~src/assets/duck_128.png"
  },
  "manifest_version": 3,
  "action": {
    "default_title": "DuckCode - Open Mock Interview",
    "default_icon": {
      "16": "~src/assets/duck_128.png",
      "48": "~src/assets/duck_128.png",
      "64": "~src/assets/duck_128.png",
      "128": "~src/assets/duck_128.png"
    }
  },
  "version": "0.0.2",
  "author": "Collin Boler",
  "name": "DuckCode",
  "description": "Voice-to-voice mock coding interviewer for LeetCode practice",
  "background": {
    "service_worker": "./static/background/index.ts"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "cookies",
    "storage",
    "activeTab",
    "tabs",
    "tabCapture"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "static/content.tsx"
      ],
      "exclude_matches": [
        "*://leetcode.com/*",
        "*://*.leetcode.com/*"
      ]
    },
    {
      "matches": [
        "*://leetcode.com/*",
        "*://*.leetcode.com/*"
      ],
      "js": [
        "static/contents/leetcode-modal.tsx"
      ]
    }
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*",
    "https://api.openai.com/*",
    "<all_urls>"
  ]
}
