{
  "name": "duckcode",
  "displayName": "DuckCode",
  "version": "0.0.2",
  "description": "Voice-to-voice mock coding interviewer for LeetCode practice",
  "author": "Collin Boler",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.5.13",
    "@types/dompurify": "^3.2.0",
    "@types/markdown-it": "^14.1.2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "dompurify": "^3.2.6",
    "markdown-it": "^14.1.0",
    "plasmo": "0.90.5",
    "prismjs": "^1.30.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^10.1.0",
    "react-router": "^7.7.1",
    "react-syntax-highlighter": "^15.6.6",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "key": "$CRX_PUBLIC_KEY",
    "permissions": [
      "cookies",
      "storage",
      "sidePanel",
      "activeTab",
      "tabs",
      "tabCapture"
    ],
    "host_permissions": [
      "https://*.clerk.accounts.dev/*",
      "$CLERK_FRONTEND_API/*",
      "http://localhost/*",
      "https://localhost/*",
      "https://api.openai.com/*",
      "<all_urls>"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "action": {
      "default_title": "DuckCode - Open Mock Interview",
      "default_icon": {
        "16": "~src/assets/duck_128.png",
        "48": "~src/assets/duck_128.png",
        "64": "~src/assets/duck_128.png",
        "128": "~src/assets/duck_128.png"
      }
    },
    "icons": {
      "16": "~src/assets/duck_128.png",
      "48": "~src/assets/duck_128.png",
      "64": "~src/assets/duck_128.png",
      "128": "~src/assets/duck_128.png"
    }
  }
}
